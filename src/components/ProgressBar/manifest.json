{
  "displayName": "Progress Bar",
  "defaultWidth": 160,
  "defaultHeight": 24,
  "components": "./index.js",
  "icon": "./example-thumbnail.png",
  "props": [
    {
      "name": "low",
      "displayName": "Minimum",
      "type": "number",
      "default": 1
    },
    {
      "name": "high",
      "displayName": "Maximum",
      "type": "number",
      "default": 4
    },
    {
      "name": "height",
      "displayName": "Height",
      "type": "number",
      "default": 50,
      "control": { "type": "slider", "max": 500, "min": 0 }
    },
    {
      "name": "borderRadius",
      "displayName": "Rounding",
      "type": "number",
      "default": 20,
      "control": { "type": "slider", "max": 30, "min": 0 }
    },
    {
      "name": "flexDirection",
      "displayName": "Orientation",
      "type": "text",
      "default": "row",
      "control": {
        "type": "menu",
        "options": [
          { "label": "Left", "value": "row" },
          { "label": "Right", "value": "row-reverse" },
          { "label": "Top", "value": "column" },
          { "label": "Bottom", "value": "column-reverse" }
        ]
      }
    },
    {
      "name": "borderColor",
      "displayName": "Border Color",
      "type": "color",
      "default": "#00A898"
    },
    {
      "name": "barColor",
      "displayName": "Bar Color",
      "type": "color",
      "default": "#00A898"
    },
    {
      "name": "backgroundColor",
      "displayName": "Background Color",
      "type": "color",
      "default": "#FFFFFF"
    }
  ]
}
